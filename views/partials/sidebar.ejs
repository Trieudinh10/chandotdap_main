<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/sidebar.css">
    <title>Responsive Dashboard Design #2 | AsmrProg</title>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" class="logo">
            <!-- <i class='bx bx-code-alt'></i>
            <div class="logo-name"><span>Thaco</span>Industries</div> -->
            <img class="logo_id" src="images/logo_i.png">
            <img src="images/logo_agri.png">
        </a>
        <ul class="side-menu">
            <li><a href="/"><i class='bx bxs-dashboard'></i>Trang Chủ</a></li>
            <li><a href="/table_1"><i class='bx bx-store-alt'></i>Nhóm Máy</a></li>
            <li><a href="/chart"><i class='bx bx-analyse'></i>Năng Suất</a></li>
            <li><a href="/table_2"><i class='bx bx-message-square-dots'></i>Tài Liệu</a></li>
            <li><a href="/data"><i class='bx bx-message-square-dots'></i>Dữ Liệu</a></li>
            <li><a href="/setting"><i class='bx bx-cog'></i>Cài Đặt</a></li>
            <% if (user) { %>
                <li><a href="/user"><i class='bx bx-group'></i>Users</a></li>

        </ul>
        <ul class="side-menu">
            <li>
                <a href="/logout" class="logout">
                    <i class='bx bx-log-out-circle'></i>
                    Logout
                </a>
            </li>
        </ul>
        <!-- <li><a href="/logout"><i class='bx bx-group'></i>LogOut</a></li> -->
        <% } else { %>
            <li><a href="/login"><i class='bx bx-group'></i>LogIn</a></li>
            <li><a href="/signup"><i class='bx bx-group'></i>SignUp</a></li>
            <% } %>
    </div>
    <!-- End of Sidebar -->

    <!-- Main Content -->
    <div class="content">
        <!-- Navbar -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button class="search-btn" type="submit"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <li style="opacity: 0.7; font-weight: 500px; color: #07539D;">Welcome,!</li>
            <input type="checkbox" id="theme-toggle" hidden>
            <label for="theme-toggle" class="theme-toggle"></label>
            <a href="#" class="notif">
                <i class='bx bx-bell'></i>
                <span class="count">12</span>
            </a>
            <a href="#" class="profile">
                <img src="images/user.png">
            </a>
        </nav>

        <!-- End of Navbar -->

        <!-- <script src="/js/active.js"></script> -->
        <script>
            // Lưu trạng thái active vào localStorage khi một mục được chọn
            const saveActiveState = (activeItem) => {
                localStorage.setItem('activeItem', activeItem);
            };

            // Lấy trạng thái active từ localStorage khi trang được tải
            document.addEventListener('DOMContentLoaded', () => {
                const activeItem = localStorage.getItem('activeItem');
                const sideLinks = document.querySelectorAll('.sidebar .side-menu li a:not(.logout)');

                if (activeItem) {
                    sideLinks.forEach(item => {
                        const li = item.parentElement;
                        if (li.textContent.trim() === activeItem) {
                            li.classList.add('active');
                        }
                    });
                }
            });

            const sideLinks = document.querySelectorAll('.sidebar .side-menu li a:not(.logout)');

            sideLinks.forEach(item => {
                const li = item.parentElement;
                item.addEventListener('click', () => {
                    sideLinks.forEach(i => {
                        i.parentElement.classList.remove('active');
                    });
                    li.classList.add('active');
                    saveActiveState(li.textContent.trim()); // Lưu trạng thái active
                });
            });

            const menuBar = document.querySelector('.content nav .bx.bx-menu');
            const sideBar = document.querySelector('.sidebar');

            menuBar.addEventListener('click', () => {
                sideBar.classList.toggle('close');
            });

            const searchBtn = document.querySelector('.content nav form .form-input button');
            const searchBtnIcon = document.querySelector('.content nav form .form-input button .bx');
            const searchForm = document.querySelector('.content nav form');

            searchBtn.addEventListener('click', function (e) {
                if (window.innerWidth < 576) {
                    e.preventDefault;
                    searchForm.classList.toggle('show');
                    if (searchForm.classList.contains('show')) {
                        searchBtnIcon.classList.replace('bx-search', 'bx-x');
                    } else {
                        searchBtnIcon.classList.replace('bx-x', 'bx-search');
                    }
                }
            });

            window.addEventListener('resize', () => {
                if (window.innerWidth < 768) {
                    sideBar.classList.add('close');
                } else {
                    sideBar.classList.remove('close');
                }
                if (window.innerWidth > 576) {
                    searchBtnIcon.classList.replace('bx-x', 'bx-search');
                    searchForm.classList.remove('show');
                }
            });

            const toggler = document.getElementById('theme-toggle');

            toggler.addEventListener('change', function () {
                if (this.checked) {
                    document.body.classList.add('dark');
                } else {
                    document.body.classList.remove('dark');
                }
            });




        </script>
</body>

</html>